@model IEnumerable<QuanLyCTDT.Models.KhoiKienThuc>

@{
    ViewData["Title"] = "Index";
}

<h1>Các Khối Kiến Thức</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ten_KhoiKT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoTa_KhoiKT)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ten_KhoiKT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa_KhoiKT)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_KhoiKT">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_KhoiKT">Details</a> |
